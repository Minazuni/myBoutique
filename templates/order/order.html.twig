{% extends 'base.html.twig' %}

{% block title %}
	Valider ma Commande
{% endblock %}

{% block content %}
	<h1 class="mt-3">
		Je passe ma commande</h1>
	<p>Choisissez vos préférences avant de passer votre commande
	</p>
	<hr>


	<div class="row">
		<div class="col-md-6">

			{% set formulaire  %}
			{{form(form)}}
				{% endset %}


				{{formulaire | replace({'[br]': '<br>'}) | raw}}
			</div>
			<div class="col-md-6">
				<b>Recap de la commande :</b>

				{% set total = null %}
				{% for product in cart %}
					<div class="row-mt-3">
						<br>
						{% set total = total + product.quantity * product.product.price%}
						<tr>
							<th scope="row"><img src="/uploads/{{product.product.picture}}" alt="{{product.product.name}}" style="width: 50px"></th>
							<td>{{product.product.name}}</td>


							<td>
								&nbsp
								{{product.quantity}}
								&nbsp

							</td>
							<td class="text-end">{{product.quantity * product.product.price / 100}}
								€</td>

						</tr>
					</div>
				{% endfor %}


			</div>

		</div>
	{% endblock %}
